{
  "name": "horse-race-backend",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf artifacts cache dist",
    "compile": "hardhat compile",
    "deploy": "hardhat deploy --network hardhat",
    "deploy:sepolia": "hardhat deploy --network sepolia",
    "verify:sepolia": "hardhat --network sepolia etherscan-verify",
    "node": "node scripts/start-node.cjs",
    "export:frontend": "ts-node --transpile-only scripts/export-frontend.ts"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.8.0",
    "@openzeppelin/contracts": "^5.1.0"
  },
  "devDependencies": {
    "@fhevm/hardhat-plugin": "^0.1.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.0.0",
    "@types/mocha": "^10.0.10",
    "chai": "^4.4.1",
    "dotenv": "^16.4.5",
    "ethers": "^6.11.1",
    "hardhat": "^2.22.10",
    "hardhat-deploy": "^0.12.4",
    "hardhat-gas-reporter": "^2.1.1",
    "rimraf": "^6.0.1",
    "solidity-coverage": "^0.8.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
